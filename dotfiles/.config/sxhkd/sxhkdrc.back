##---------- Keybindings for bspwm ----------##

# afficher la date et l'heure sous forme de notification
super + d
    notify-send "$(date)" "$(date +%H:%M:%S)"
# afficher la batterie sous forme de notification
super + b
    notify-send "$(acpi)" 

# Terminal (alacritty)
super + k
	kitty
super + a
    alacritty


#scratchpad
super + o
    tdrop -a -w 72% -h 83% -y 7% -x 15%  --class scratch kitty --class=scratch
    #tdrop -a -w 70% -h 35% -y 15% -x 15%  --class scratch alacritty --class=scratch
